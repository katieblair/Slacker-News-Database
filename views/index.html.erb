<h1>Slacker News</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Url</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article["title"] %></td>
        <td><%= article["description"] %></td>
        <td>
          <a href="<%= article["url"] %>" />
            <%= article["url"] %>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



<h3>Submit a new article here:</h3>
<p>
  <a href=<%= "/articles/new" %>>New Article</a>
</p>
